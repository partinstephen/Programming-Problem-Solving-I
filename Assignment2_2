/*
 * Write a program that reads a Celsius degree in double, then converts it to
 * Fahrenheit and displays the result. The formula for the conversion is as
 * follows: fahrenheit = (9 / 5) * celsius + 32
 */

/**
 * Programming & Problem Solving I
 * Assignment 2_2
 * 05/19/2017
 * @author spartin
 */
import java.util.Scanner;

public class Assignment2_2 {

    public static void main(String[] args) {
       //Create a new scanner opject
       Scanner input = new Scanner(System.in);
       
       //Prompt the user to input a double
       System.out.println("Enter a degree in Celsius: ");
       double celsius = input.nextDouble();
       
       //Convert celsius to fahrenheit
       double fahrenheit = 9.0 / 5 * celsius + 32;
       
       //Display result
       System.out.println(celsius + " Celsius is " + fahrenheit + " Fahrenheit");
    }
    
}
